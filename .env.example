# IRA Environment Variables
# Copy this file to .env and fill in your values

# Flask Secret Key (used for sessions)
# Generate a secure key using one of these methods:
#   Method 1 (Python): python -c "import secrets; print(secrets.token_hex(32))"
#   Method 2 (PowerShell): -join ((65..90) + (97..122) + (48..57) | Get-Random -Count 64 | % {[char]$_})
#   Method 3 (Online): https://randomkeygen.com/ (use "CodeIgniter Encryption Keys")
SECRET_KEY=your_secret_key_here

# Database URI (SQLite for local, PostgreSQL for production)
DATABASE_URI=sqlite:///instance/ira.db

# Debug mode (True for development, False for production)
DEBUG=True

# Google Gemini API Key (for AI chatbot)
# Get a free API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Render deployment flag (automatically set by Render)
# RENDER=true

# Disable AI models (set to 'true' to disable ML models - reduces memory usage)
# DISABLE_AI_MODELS=true